<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.menudetail.MenuDetailActivity">

    <ImageView
        android:id="@+id/iv_food_photo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintDimensionRatio="16:9"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/avatars" />


    <include
        android:id="@+id/layout_menu_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_menu_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_food_photo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/layout_location_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_location_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_menu_detail"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/layout_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        layout="@layout/layout_addtocart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>